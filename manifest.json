{
    "manifest_version": 2,
    "name": "Facebook头像放大",
    "description": "鼠标放在Facebook的头像上，可以放大头像。",
    "author": "dev-coco",
    "version": "1.0",
    "browser_action": {
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : false
    },
    "permissions": [
      "https://*.facebook.com/*","https://*.messenger.com/*"
    ]
}
